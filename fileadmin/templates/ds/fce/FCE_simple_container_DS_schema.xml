<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
	<meta type="array">
		<langDisable>1</langDisable>
	</meta>
	<ROOT type="array">
		<tx_templavoilaplus type="array">
			<title>FCE simple container DS schema</title>
			<description>Select the HTML element on the page which you want to be the overall container element for the template.</description>
		</tx_templavoilaplus>
		<type>array</type>
		<el type="array">
			<field_class_col1 type="array">
				<type>attr</type>
				<tx_templavoilaplus type="array">
					<title>Additional CSS class</title>
					<sample_data type="array">
						<numIndex index="0">col1-classs</numIndex>
					</sample_data>
					<eType>input</eType>
					<tags>div:attr:class</tags>
					<proc type="array">
						<HSC type="integer">1</HSC>
					</proc>
					<TypoScript>
	10= TEXT
	10.value = simple-container {field:field_class_col1}
	10.insertData = 1
					</TypoScript>
				</tx_templavoilaplus>
				<TCEforms type="array">
					<config type="array">
						<type>input</type>
						<size>48</size>
						<eval>trim</eval>
					</config>
					<label>Additional CSS class</label>
				</TCEforms>
			</field_class_col1>
			<field_style_col1 type="array">
				<type>attr</type>
				<tx_templavoilaplus type="array">
					<title>Inline style</title>
					<sample_data type="array">
						<numIndex index="0">color: blue;</numIndex>
					</sample_data>
					<eType>input</eType>
					<tags>div:attr:style</tags>
					<proc type="array">
						<HSC type="integer">1</HSC>
					</proc>
				</tx_templavoilaplus>
				<TCEforms type="array">
					<config type="array">
						<type>input</type>
						<size>48</size>
						<eval>trim</eval>
					</config>
					<label>Inline style</label>
				</TCEforms>
			</field_style_col1>
			<field_col1 type="array">
				<tx_templavoilaplus type="array">
					<title>SIMPLE CONTAINER:</title>
					<sample_data type="array">
						<numIndex index="0">col 1 content...</numIndex>
					</sample_data>
					<eType>ce</eType>
					<tags>div</tags>
					<TypoScript>
	10= RECORDS
	10.source.current=1
	10.tables = tt_content
                    </TypoScript>
					<oldStyleColumnNumber type="integer">0</oldStyleColumnNumber>
				</tx_templavoilaplus>
				<TCEforms type="array">
					<config type="array">
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tt_content</allowed>
						<size>5</size>
						<maxitems>200</maxitems>
						<minitems>0</minitems>
						<multiple>1</multiple>
						<show_thumbs>1</show_thumbs>
					</config>
					<label>SIMPLE CONTAINER:</label>
				</TCEforms>
			</field_col1>
			<field_code_after type="array">
				<tx_templavoilaplus type="array">
					<title>HTML code after</title>
					<sample_data type="array">
						<numIndex index="0"></numIndex>
					</sample_data>
					<eType>text</eType>
					<tags>div:outer</tags>
					<proc type="array">
						<HSC type="integer">0</HSC>
					</proc>
					<TypoScript>
	10= TEXT
	10.current = 1
					</TypoScript>
				</tx_templavoilaplus>
				<TCEforms type="array">
					<config type="array">
						<type>text</type>
						<cols>48</cols>
						<rows>7</rows>
					</config>
					<label>HTML code after</label>
				</TCEforms>
			</field_code_after>
		</el>
	</ROOT>
</T3DataStructure>